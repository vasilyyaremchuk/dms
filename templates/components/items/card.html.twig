<!-- Card -->
<div class="max-w-sm rounded overflow-hidden shadow-lg m-2">
  {% if content.image is defined %}
    {{ content.image|raw }}
  {% endif %}
  <div class="px-6 py-4">
    {{ content.headline|raw }}
    {{ content.text|raw }}
  </div>
  <div class="px-6 pt-4 pb-2">
    {{ content.button|raw }}
  </div>
</div>
